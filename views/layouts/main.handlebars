<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>CrowdFundr</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="min-vh-100 d-flex flex-column">
    <header class="border-bottom bg-light">
      <nav
        class="container py-3 d-flex justify-content-between align-items-center"
      >
        <a class="fw-bold text-decoration-none" href="/">CrowdFundr</a>
        <div class="d-flex gap-3 align-items-center">
          <a href="/" class="text-decoration-none">Home</a>
          {{#if logged_in}}
            <a href="/profile" class="text-decoration-none">Profile</a>
            <button
              id="logout"
              class="btn btn-sm btn-outline-dark"
            >Logout</button>
          {{else}}
            <a href="/login" class="text-decoration-none">Login</a>
          {{/if}}
        </div>
      </nav>
    </header>

    <main class="container my-4 flex-grow-1">
      {{{body}}}
    </main>

    <footer class="border-top bg-light">
      <div class="container py-3 text-muted small">
        Built with Express + Sequelize + Handlebars (MVC)
      </div>
    </footer>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>